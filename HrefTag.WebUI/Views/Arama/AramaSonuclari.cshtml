@using HrefTag.WebUI.ViewModels
@model SearchViewModel
@{
    ViewData["Title"] = "Arama Sonuçları";
}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="col-md-8">
            <div class="row">

                <div class="search-form" style="margin-bottom:50px">
                    <form asp-controller="Arama" asp-action="AramaSonuclari" method="post">
                        <input style="width: 60%; height: 75px;margin:0px 10%" type="text" asp-for="@Model.keyword" placeholder="Arama Yap...">

                        <input type="submit" value="Arama Yap" class="btn btn-success pr-2 pl-2" style="height: 75px;">
                    </form>
                </div>
                <!-- post -->
                @foreach (var item in Model.searchResponseDtos)
                {

                    <div class="col-md-12">
                        <div class="post post-row">
                            <a class="post-img" asp-controller="Yazi" asp-action="Yazi" asp-route-post="@item.UrlBaslik">
                                <img src="~/uploads/@item.OneCikanGorsel" alt="@item.Baslik">
                            </a>
                            <div class="post-body">
                                <h3 class="post-title">
                                    <a asp-controller="Yazi" asp-action="Yazi" asp-route-post="@item.UrlBaslik">@item.Baslik</a>
                                </h3>
                                <p>
                                    @if (@item.Icerik != null)
                                    {
                                        @Html.Raw(@item.Icerik)
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
                <!-- /post -->
            </div>

            <div class="col-md-4">
                <partial name="Reklamlar/AllPageSidebar" for="@Model.reklamAlanlariDtos"/>
                <!-- post widget -->
                @await Component.InvokeAsync("SidebarTop")
                <!-- /post widget -->
                <!-- catagories -->
                @await Component.InvokeAsync("SidebarBottom")
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->