@using HrefTag.WebUI.ViewModels
@model YazarlarViewModel
@{
    ViewData["Title"] = "Yazarlarimiz";
}

<div class="main_content">
    <div class="mcontainer">

        @foreach (var item in Model.userListDtos)
        {
            <div class="lg:flex  lg:space-x-12 mb-5">
                <div class="lg:w-3/4  card">
                    <hr class="border-gray-100">
                    <div class="md:p-7 p-3">
                        <h1 class="block text-xl font-bold mb-6">@item.Name @item.Surname</h1>
                        <div class="md:flex">
                            <div class="md:w-3/4 space-y-4 -mt-2">

                                <div class="flex items-center space-x-3">
                                    <ion-icon name="code-working-outline" class="bg-gray-100 p-1.5 rounded-full text-xl"></ion-icon>
                                    <div class="flex-1">
                                        <div>  <a href="#" class="text-blue-500">@item.Job</a> </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <ion-icon name="school-outline" class="bg-gray-100 p-1.5 rounded-full text-xl"></ion-icon>
                                    <div class="flex-1">
                                        <div>@item.Education</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <ion-icon name="albums" class="bg-gray-100 p-1.5 rounded-full text-xl"></ion-icon>
                                    <div class="flex-1">
                                        <div>@item.Skills</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <ion-icon name="unlink" class="bg-gray-100 p-1.5 rounded-full text-xl"></ion-icon>
                                    <div class="flex-1">
                                        <div>  <a href="#" class="text-blue-500">@item.Email</a> </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <ion-icon name="people-outline" class="bg-gray-100 p-1.5 rounded-full text-xl"></ion-icon>
                                    <div class="flex-1">
                                        <div>  <a href="#" class="text-blue-500">@item.About</a> </div>
                                    </div>
                                </div>

                            </div>

                            <div class="flex-1 space-y-4 md:mt-0 mt-6">
                                <img src="~/uploads/@item.ImagePath" alt="" class="w-full h-full absolute inset-0 object-cover">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>