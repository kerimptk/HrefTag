@using HrefTag.WebUI.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = Html.Raw(Model.seoAyarlariDto.Keywords);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main_content">
    <div class="mcontainer">


        @if (Model.genelAyarlarDto.EditorunSectikleriAktif == true)
        {
            <div class="grid md:grid-cols-4 grid-cols-2 gap-3 border-t">
                @foreach (var item in Model.oneCikanlar.Take(8))
                {
                    <div class="transform hover:scale-105">
                        <div class="bg-green-400 max-w-full lg:h-56 h-48 rounded-lg relative overflow-hidden shadow uk-transition-toggle">
                            <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik">
                                <img src="~/uploads/@item.OneCikanGorsel" class="w-full h-full absolute object-cover inset-0" alt=" @Html.Raw(@item.Baslik)">
                                <!-- overly-->
                                <div class="-bottom-12 absolute bg-gradient-to-b from-transparent h-2/3 to-gray-800 w-full"></div>
                                <div class="absolute bottom-0 w-full p-3 text-white flex items-center">
                                    <div class="flex-1">
                                        <div class="text-md">
                                            @Html.Raw(@item.Baslik)
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
            <br>
        }

        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8594746141557193"
                crossorigin="anonymous"></script>
        <!-- Ana Sayfa Yatay Slider Alt -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-8594746141557193"
             data-ad-slot="6425780389"
             data-ad-format="auto"
             data-full-width-responsive="true"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>

        <div class="row">
            <div class="lg:flex lg:space-x-12 mt-4">
                <div class="row">
                    <div class="w-full" style="min-width:300px;">

                        <h2 class="text-xl font-semibold"> Duyurular </h2>
                        @if (Model.genelAyarlarDto.DuyurularAktif == true)
                        {
                            @foreach (var item in Model.blogYaziListDtos.Where(i => i.DuyuruMu == 1).Take(4).OrderByDescending(i => i.Id).ToList())
                            {
                                <div class=" col-3 float-left flex items-center space-x-4 py-2 hover:bg-gray-100 rounded-md px-2" >
                                    <div class="w-14 h-14 flex-shrink-0 rounded-md relative">
                                        <img src="/uploads/@item.OneCikanGorsel" class="absolute w-full h-full inset-0 rounded-md object-cover" alt=" @Html.Raw(@item.Baslik)">
                                    </div>
                                    <div class="flex-1">
                                        <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="text-sm font-semibold capitalize"> @Html.Raw(@item.Baslik) </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="lg:flex lg:space-x-12 mt-4">
                <div class="row">
                    <div class="lg:w-3/4 w-full" style="min-width:300px;">
                        <h2 class="text-xl font-semibold"> Son İçerikler </h2>
                        @foreach (var item in Model.blogYaziListDtos.Take(10))
                        {
                            <div class=" col-6 float-left flex items-center space-x-4 py-2 hover:bg-gray-100 rounded-md px-2" style="min-width:300px">
                                <div class="w-14 h-14 flex-shrink-0 rounded-md relative">
                                    <img src="/uploads/@item.OneCikanGorsel" class="absolute w-full h-full inset-0 rounded-md object-cover" alt=" @Html.Raw(@item.Baslik)">
                                </div>
                                <div class="flex-1">
                                    <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="text-sm font-semibold capitalize"> @Html.Raw(@item.Baslik) </a>
                                </div>
                            </div>
                        }

                        <div class="m-3">
                            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8594746141557193"
                                    crossorigin="anonymous"></script>
                            <!-- Ana Sayfa Orta Kısım Kare -->
                            <ins class="adsbygoogle"
                                 style="display:block"
                                 data-ad-client="ca-pub-8594746141557193"
                                 data-ad-slot="7290062078"
                                 data-ad-format="auto"
                                 data-full-width-responsive="true"></ins>
                            <script>
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            </script>
                        </div>
                        <div class="m-3">
                            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8594746141557193"
                                    crossorigin="anonymous"></script>
                            <!-- Ana Sayfa Orta Kısım Kare -->
                            <ins class="adsbygoogle"
                                 style="display:block"
                                 data-ad-client="ca-pub-8594746141557193"
                                 data-ad-slot="7290062078"
                                 data-ad-format="auto"
                                 data-full-width-responsive="true"></ins>
                            <script>
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            </script>
                        </div>
                        <div class="my-3">
                            <h4 class="text-lg font-semibold mb-3">Etiket Bulutu</h4>
                            <div class="flex items-center flex-wrap gap-2 my-4">
                                @foreach (var item in Model.etiketDtos)
                                {
                                    <a href="#" class="bg-indigo-200 py-1.5 px-4 rounded-full">@item.Ad</a>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="lg:w-1/4 w-full">
                        <h3 class="text-xl font-bold mb-2"> Popüler İçerikler </h3>
                        @foreach (var item in Model.populerIcerkler.Take(5))
                        {
                            <div>
                                <div class="py-2 relative">
                                    <a href=asp-controller ="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="w-full h-32 overflow-hidden rounded-lg relative shadow-sm flex-shrink-0 block">
                                        <img src="/uploads/@item.OneCikanGorsel" class="w-full h-full absolute inset-0 object-cover" alt=" @Html.Raw(@item.Baslik)">
                                    </a>
                                    <div class="flex-1 pt-3 relative">
                                        <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="line-clamp-2 font-semibold">@Html.Raw(@item.Baslik) </a>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
