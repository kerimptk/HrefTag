@using HrefTag.WebUI.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}
<div id="wrapper">
    <div class="main_content">
        <div class="mcontainer">
            <div class="row border-2 border-solid border-gray-100">
                <div class="col-2">
                    <img alt="Facebook" src="~/StatikResimler/bizitakipedin.png" class="border-2 border-white">
                </div>
                <div class="col-2">
                    <a href="https://www.facebook.com/@Model.sosyalMedyaDto.Facebook" target="_blank" class="text-md font-semibold capitalize">
                        <img alt="Facebook" src="~/StatikResimler/facebook.png" class="border-2 border-white">
                    </a>
                </div>
                <div class="col-2">
                    <a href="https://www.twitter.com/@Model.sosyalMedyaDto.Twitter" target="_blank" class="text-md font-semibold capitalize">
                        <img alt="Twitter" src="~/StatikResimler/twitter.png" class="border-2 border-white">
                    </a>
                </div>
                <div class="col-2">
                    <a href="https://www.instagram.com/@Model.sosyalMedyaDto.Instagram" target="_blank" class="text-md font-semibold capitalize">
                        <img alt="Instagram" src="~/StatikResimler/instagram.png" class="border-2 border-white">
                    </a>
                </div>                
                <div class="col-2">
                    <a href="https://www.linkedin.com/in/@Model.sosyalMedyaDto.Linkedin" target="_blank" class="text-md font-semibold capitalize">
                        <img alt="Linkedin" src="~/StatikResimler/linkedin.png" class="border-2 border-white">
                    </a>
                </div>
                <div class="col-2">
                    <a href="https://www.youtube.com/channel//@Model.sosyalMedyaDto.Youtube" target="_blank" class="text-md font-semibold capitalize">
                        <img alt="Youtube" src="~/StatikResimler/youtube.png" class="border-2 border-white">
                    </a>
                </div>
            </div>
            <hr />
            <div class="lg:flex lg:space-x-12 mt-4">
                <div class="row">
                    <div class="col-4 float-left">
                        <h2 class="text-xl font-semibold"> Son İçerikler </h2>
                        @foreach (var item in Model.blogYaziListDtos.Take(4))
                        {
                            <div class="flex items-center space-x-4 py-2 hover:bg-gray-100 rounded-md -mx-2 px-2">
                                <div class="w-14 h-14 flex-shrink-0 rounded-md relative">
                                    <img src="/uploads/@item.OneCikanGorsel" class="absolute w-full h-full inset-0 rounded-md object-cover" alt="@item.Baslik">
                                </div>
                                <div class="flex-1">
                                    <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="text-md font-semibold capitalize">@item.Baslik </a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-4 float-left">
                        <h2 class="text-xl font-semibold"> Çok Okunanlar </h2>
                        @foreach (var item in Model.populerIcerkler.Take(4))
                        {
                            <div class="flex items-center space-x-4 py-2 hover:bg-gray-100 rounded-md -mx-2 px-2">
                                <div class="w-14 h-14 flex-shrink-0 rounded-md relative">
                                    <img src="/uploads/@item.OneCikanGorsel" class="absolute w-full h-full inset-0 rounded-md object-cover" alt="@item.Baslik">
                                </div>
                                <div class="flex-1">
                                    <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="text-md font-semibold capitalize">@item.Baslik </a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-4 float-left">
                        <h2 class="text-xl font-semibold"> Editörün Seçtikleri </h2>
                        @foreach (var item in Model.oneCikanlar.Take(4))
                        {
                            <div class="flex items-center space-x-4 py-2 hover:bg-gray-100 rounded-md -mx-2 px-2">
                                <div class="w-14 h-14 flex-shrink-0 rounded-md relative">
                                    <img src="/uploads/@item.OneCikanGorsel" class="absolute w-full h-full inset-0 rounded-md object-cover" alt="@item.Baslik">
                                </div>
                                <div class="flex-1">
                                    <a asp-controller="Blog" asp-action="yazi" asp-route-post="@item.UrlBaslik" class="text-md font-semibold capitalize">@item.Baslik </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>