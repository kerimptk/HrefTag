@using HrefTag.WebUI.ViewModels;
@model SearchViewModel;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="section">
    <div class="container">
        <div class="row">
            <br />
            <br />
            <div class="col-8">
                <div class="text-center" style="font-size:36px;">
                    Aradığın sayfayı bulamadık.<br /> 404 Not Found!
                </div>
            </div>
            <br />
            <br />
            <div class="col-8 align-content-center">
                <div class="text-center" style="font-size:24px;">
                    Şansını arama yaparak denemek ister misin?
                    <hr>
                    <form asp-controller="Arama" asp-action="AramaYap" method="post">
                        <input type="text" name="aranan" required placeholder="Ne aramıştınız...">
                        <input type="submit" value="Ara" class="btn btn-success m-2">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>