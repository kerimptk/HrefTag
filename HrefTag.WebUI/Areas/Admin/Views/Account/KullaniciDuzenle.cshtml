@using HrefTag.WebUI.ViewModels;
@model AdminKullaniciGuncelleViewModel;

@{
    ViewData["Title"] = "Profil Dzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-12">
    <form asp-area="Admin" asp-controller="Account" asp-action="ProfilDuzenle" enctype="multipart/form-data" method="post">
        <!-- Profile Image -->
        <div class="card card-primary card-outline col-3 float-left">
            <div class="card-body box-profile">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle"
                         src="~/uploads/@Model.profilDto.ImagePath"
                         alt="Profil Fotoğrafı">
                </div>
                <div class="text-center">
                    <dl>
                        <dd>
                            <input type="file" name="OneCikanGorsel" id="OneCikanGorsel" class="inputfile" name="OneCikanGorsel">
                        </dd>
                    </dl>
                </div>
                <input type="text" name="Id" value="@Model.profilDto.Id" class="form-control profile-username text-center" hidden>
                <input type="text" name="NameSurname" value="@Model.profilDto.Name" class="form-control profile-username text-center">
                <input type="text" name="NameSurname" value="@Model.profilDto.Surname" class="form-control profile-username text-center">

                <input type="text" name="Job" value="@Model.profilDto.Job" class="form-control text-muted text-center">

                <input type="submit" value="Değişiklikleri Kaydet" class="form-control btn btn-primary m-2">
                <a asp-area="Admin" asp-controller="Account" asp-action="ProfilBilgileri" type="submit" class="form-control btn btn-danger m-2">İptal</a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- About Me Box -->
        <div class="card card-primary col-9">
            <div class="card-header">
                <h3 class="card-title">Hakkımda</h3>
            </div>
            <div class="row">
                <div class="col-4 float-left">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> Eğitim</strong>

                        <input type="text" name="Education" value="@Model.profilDto.Education" class="form-control text-muted">

                        <hr>

                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Adres</strong>

                        <input type="text" name="Adress" value="@Model.profilDto.Adress" class="form-control text-muted">

                        <hr>

                        <strong><i class="fas fa-pencil-alt mr-1"></i> Yetenekler</strong>

                        <input type="text" name="Skills" value="@Model.profilDto.Skills" class="form-control text-muted">

                        <hr>
                    </div>
                </div>
                <div class="col-8 float-left">
                    <div class="card-body">
                        <strong><i class="far fa-file-alt mr-1"></i> Kısaca</strong>
                        <textarea name="About" class="form-control text-muted">@Model.profilDto.About</textarea>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </form>
</div>