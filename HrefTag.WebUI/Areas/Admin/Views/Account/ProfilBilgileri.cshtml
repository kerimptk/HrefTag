@using Blog.Domain.DataTransferObjects
@{
    ViewData["Title"] = "Profil Bilgileri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-12">
    
        <!-- Profile Image -->
        <div class="card card-primary card-outline col-3 float-left">
            <div class="card-body box-profile">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle"
                         src="~/uploads/@Model.ImagePath"
                         alt="Profil Fotoğrafı">
                </div>

                <h3 class="profile-username text-center">@Model.Name @Model.Surname</h3>

                <p class="text-muted text-center">@Model.Job</p>

                <a asp-area="Admin" asp-controller="Account" asp-action="ProfilDuzenle" type="submit" class="form-control btn btn-primary m-2 pb-3">Profili Düzenle</a>
                <input type="submit" value="Şifre Değiştir" class="form-control btn btn-primary m-2">
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- About Me Box -->
        <div class="card card-primary col-9">
            <div class="card-header">
                <h3 class="card-title">Hakkımda</h3>
            </div>
            <div class="row">
                <div class="col-4 float-left">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> Eğitim</strong>

                        <p class="text-muted">
                            @Model.Education
                        </p>

                        <hr>

                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Adres</strong>

                        <p class="text-muted">@Model.Adress</p>

                        <hr>

                        <strong><i class="fas fa-pencil-alt mr-1"></i> Yetenekler</strong>
                        @Model.Skills
                        <hr>
                    </div>
                </div>
                <div class="col-8 float-left">
                    <div class="card-body">
                        <strong><i class="far fa-file-alt mr-1"></i> Kısaca</strong>
                        <p class="text-muted">@Model.About</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
</div>