@using HrefTag.WebUI.ViewModels
@model AdminHomeViewModel

@{
    ViewData["Title"] = "Yönetim Paneli | Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content pt-4">
    <div class="container-fluid">
        <!-- Yazı İstatistikleri-->
        <div class="row">

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.postaKutusuDtos.Count(i => i.OnayDurumuId == 0)</h3>
                        <p>Yeni Soru</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="GelenSorular" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <div class="inner">
                            <h3>@Model.postaKutusuDtos.Count(i => i.OnayDurumuId == 1)</h3>
                            <p>Görüntülenen Soru</p>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="GelenSorular" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.yorumDtos.Count(i => i.OnayDurumuId == 0 && i.SilId == 0)</h3>
                        <p>Onay Bekleyen Yorum</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-controller="yorum" asp-action="OnayBekleyenler" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.yorumDtos.Count(i => i.OnayDurumuId == 1)</h3>
                        <p>Onaylı Yorum</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-controller="yorum" asp-action="onaylananlar" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.yaziDtos.Count(i => i.OnayDurumuId == 0)</h3>
                        <p>Taslak  İçerik</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="yazi" asp-action="yazilistesi" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.yaziDtos.Count(i => i.OnayDurumuId == 1)</h3>
                        <p>Yayınlanmış İçerik</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="Yazi" asp-action="yazilistesi" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.kategoriDtos.Count()</h3>
                        <p>Kategori</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="kategori" asp-action="index" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.accountDtos.Count()</h3>
                        <p>Kullanıcı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a asp-controller="Account" asp-action="KullaniciListesi" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>