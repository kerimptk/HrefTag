@using HrefTag.WebUI.ViewModels
@model AdminHomeViewModel

@{
    ViewData["Title"] = "Yönetim Paneli | Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content pt-4">
    <div class="container-fluid">
        <!-- Yazı İstatistikleri-->
        <div class="row">

            <div class="col-lg-4 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.yaziDtos.Count(i=> i.OnayDurumuId == 0)</h3>
                        <p>Taslak  İçerik</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="yazi" asp-action="yazilistesi" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-4 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.postaKutusuDtos.Count(i => i.OnayDurumuId == 0)</h3>
                        <p>Okunmamış Mesaj</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="OkunmamisMesajlar" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <!-- ./col -->
            <div class="col-lg-4 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.yorumDtos.Count(i => i.OnayDurumuId == 0)</h3>
                        <p>Onay Bekleyen Yorum</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-controller="yorum" asp-action="OnayBekleyenler" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.yaziDtos.Count(i => i.OnayDurumuId == 1)</h3>
                        <p>Yayınlanmış İçerik</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="Yazi" asp-action="yazilistesi" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.yorumDtos.Count(i => i.OnayDurumuId == 1)</h3>
                        <p>Onaylı Yorum</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-controller="yorum" asp-action="onaylananlar" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.kategoriDtos.Count()</h3>
                        <p>Kategori</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="kategori" asp-action="index" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.accountDtos.Count()</h3>
                        <p>Kullanıcı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a asp-controller="Account" asp-action="KullaniciListesi" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Gelen Kutusu İstatistikleri -->
        <div class="row">

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <div class="inner">
                            <h3>@Model.postaKutusuDtos.Count(i => i.Konu.Equals("Öneri / İstek"))</h3>
                            <p>Öneri / İstek</p>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="IstekveOneriler" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <div class="inner">
                            <h3>@Model.postaKutusuDtos.Count(i => i.Konu.Equals("Hata Bildirimi"))</h3>
                            <p>Hata Bildirim</p>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="Hatabildirimleri" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <div class="inner">
                            <h3>@Model.postaKutusuDtos.Count(i => i.Konu.Equals("Reklam ve İşbirliği"))</h3>
                            <p>Reklam ve İşbirliği</p>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="reklamveisbirligitalepleri" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <div class="inner">
                            <h3>@Model.postaKutusuDtos.Count(i => i.Konu.Equals("Diğer"))</h3>
                            <p>Diğer Mesaj</p>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-controller="PostaKutusu" asp-action="digermesajlar" class="small-box-footer">Tamamını Gör <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->

    </div><!-- /.container-fluid -->
</section>